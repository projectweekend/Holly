div(class="row")

  div(class="page-header")
    h1 Messages

  div(ng-if="systemMessages.values.messages.length > 0", ng-repeat="m in systemMessages.values.messages", class="col-md-4")
    div(class="system-message")
      div
        span(class="system-message-label") Date: 
        span(class="text-primary") {{ m.date | date:'medium' }}
      div
        span(class="system-message-label") From: 
        span(class="text-primary") {{ m.from }}
      p(class="lead") {{ m.body }}

  div(ng-if="!systemMessages.values.messages.length > 0", class="col-md-12")
    div(class="alert alert-success")
      strong No recent system messages to display :)


div(class="row")

  div(class="page-header")
    h1 Starbug Temperature: 
      span(class="text-primary") {{starbugCurrentTemp.values.fahrenheit | number:2}}&deg; F

  div(class="col-md-8")
    canvas(chart, id="starbugTempChart", type="Line", options="starbugTempReporting.chart.options", data="starbugTempReporting.chart.data", width="700", height="350")

  div(class="col-md-4")

    div(class="stats-panel")
      
      div(class="stats-panel-options btn-group btn-group-justified")
        a( ng-click="starbugTempStats.getValues('today')", ng-class="{ active: starbugTempStats.values.label == 'Today' }", class="btn btn-default") Today
        a( ng-click="starbugTempStats.getValues('week')", ng-class="{ active: starbugTempStats.values.label == 'Last 7 Days' }", class="btn btn-default") 7 Days
        a( ng-click="starbugTempStats.getValues('month')", ng-class="{ active: starbugTempStats.values.label == 'Last 30 Days' }", class="btn btn-default") 30 Days
        a( ng-click="starbugTempStats.getValues('overall')", ng-class="{ active: starbugTempStats.values.label == 'Overall' }", class="btn btn-default") Overall

      div(ng-if="starbugTempStats.loadingValues && !starbugTempStats.loadingError", class="alert alert-info")
        strong Calculating stats...
      
      div(ng-if="!starbugTempStats.loadingValues && starbugTempStats.loadingError", class="alert alert-danger")
        strong Something went wrong...

      div(ng-if="!starbugTempStats.loadingValues && !starbugTempStats.loadingError", class="stat-wrapper")
        div(class="stat-label") Average:
        div(class="stat-value")
          span(ng-hide="starbugTempStats.values.average.fahrenheit == 'No data'", class="text-primary") {{starbugTempStats.values.average.fahrenheit | number:2}}&deg; F
          span(ng-show="starbugTempStats.values.average.fahrenheit == 'No data'", class="text-primary") No data
      
      hr
      
      div(ng-if="!starbugTempStats.loadingValues && !starbugTempStats.loadingError", class="stat-wrapper")
        div(class="stat-label") High:
        div(class="stat-value") 
          span(ng-hide="starbugTempStats.values.max.fahrenheit == 'No data'", class="text-primary") {{starbugTempStats.values.max.fahrenheit | number:2}}&deg; F
          span(ng-show="starbugTempStats.values.max.fahrenheit == 'No data'", class="text-primary") No data
      
      hr
      
      div(ng-if="!starbugTempStats.loadingValues && !starbugTempStats.loadingError", class="stat-wrapper")
        div(class="stat-label") Low:
        div(class="stat-value")        
          span(ng-hide="starbugTempStats.values.min.fahrenheit == 'No data'", class="text-primary") {{starbugTempStats.values.min.fahrenheit | number:2}}&deg; F
          span(ng-show="starbugTempStats.values.min.fahrenheit == 'No data'", class="text-primary") No data

div(class="row")

  div(class="page-header")
    h1 Holly Information

  div(class="col-md-4")
    h3 Memory 
      small as of {{ systemCurrentMemory.values.date | date:'medium' }}
    ul(class="list-inline")
      li(style="color: #F7464A;") 
        strong Used
      li(style="color: #4D5360;") 
        strong Free
      li(style="color: #7EC5BC;")
        strong Shared
      li(style="color: #949FB1;")
        strong Buffers
      li(style="color: #D4CCC5;")
        strong Cached

    canvas(chart, id="systemMemoryChart", type="Pie", options="systemCurrentMemory.currentMemoryChart.options", data="systemCurrentMemory.currentMemoryChart.data", width="370", height="300")

  div(class="col-md-4")
    h3 Storage 
      small as of {{ systemCurrentStorage.values.date | date:'medium' }}
    ul(class="list-inline")
      li(style="color: #F7464A;")
        strong Used
      li(style="color: #4D5360;")
        strong Available

    canvas(chart, id="systemMemoryChart", type="Pie", options="systemCurrentStorage.currentStorageChart.options", data="systemCurrentStorage.currentStorageChart.data", width="370", height="300")

  div(class="col-md-4")
    h3 Coming soon...
