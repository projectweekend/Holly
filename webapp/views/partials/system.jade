div(class="row")

  div(class="page-header")
    h1 Holly Temperature: 
      span(class="text-primary") {{systemCurrentTemp.values.fahrenheit | number:2}}&deg; F

  div(class="col-md-8")
    canvas(chart, id="systemTempChart", type="Line", options="systemTempReporting.recentTempChart.options", data="systemTempReporting.recentTempChart.data", width="700", height="350")

  div(class="col-md-4")
    div(class="stats-panel")
      
      div(class="stats-panel-options btn-group btn-group-justified")
        a( ng-click="systemTempStats.getValues('today')", ng-class="{ active: systemTempStats.values.label == 'Today' }", class="btn btn-default") Today
        a( ng-click="systemTempStats.getValues('week')", ng-class="{ active: systemTempStats.values.label == 'Last 7 Days' }", class="btn btn-default") 7 Days
        a( ng-click="systemTempStats.getValues('month')", ng-class="{ active: systemTempStats.values.label == 'Last 30 Days' }", class="btn btn-default") 30 Days
        a( ng-click="systemTempStats.getValues('overall')", ng-class="{ active: systemTempStats.values.label == 'Overall' }", class="btn btn-default") Overall

      div(ng-if="systemTempStats.loadingValues && !systemTempStats.loadingError", class="alert alert-info")
        strong Calculating stats...
      
      div(ng-if="!systemTempStats.loadingValues && systemTempStats.loadingError", class="alert alert-danger")
        strong Something went wrong...

      div(ng-if="!systemTempStats.loadingValues && !systemTempStats.loadingError", class="stat-wrapper")
        div(class="stat-label") Average:
        div(class="stat-value")
          span(ng-hide="systemTempStats.values.average.fahrenheit == 'No data'", class="text-primary") {{systemTempStats.values.average.fahrenheit | number:2}}&deg; F
          span(ng-show="systemTempStats.values.average.fahrenheit == 'No data'", class="text-primary") No data
      
      hr
      
      div(ng-if="!systemTempStats.loadingValues && !systemTempStats.loadingError", class="stat-wrapper")
        div(class="stat-label") High:
        div(class="stat-value") 
          span(ng-hide="systemTempStats.values.max.fahrenheit == 'No data'", class="text-primary") {{systemTempStats.values.max.fahrenheit | number:2}}&deg; F
          span(ng-show="systemTempStats.values.max.fahrenheit == 'No data'", class="text-primary") No data
      
      hr
      
      div(ng-if="!systemTempStats.loadingValues && !systemTempStats.loadingError", class="stat-wrapper")
        div(class="stat-label") Low:
        div(class="stat-value")        
          span(ng-hide="systemTempStats.values.min.fahrenheit == 'No data'", class="text-primary") {{systemTempStats.values.min.fahrenheit | number:2}}&deg; F
          span(ng-show="systemTempStats.values.min.fahrenheit == 'No data'", class="text-primary") No data

